<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"

    tools:context="cs160.dinestination.MainActivity">

    <!-- test filter button  -->
    <Button
        android:id="@+id/test_filter_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80px"
        android:layout_marginLeft="80px"
        android:layout_alignParentRight="true"
        android:background="@color/colorPrimary"
        android:text="filters"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <!-- test bottom sheet button  -->
    <Button
        android:id="@+id/test_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80px"
        android:layout_marginLeft="80px"
        android:layout_alignParentRight="true"
        android:background="@color/colorPrimary"
        android:text="close"
        android:fontFamily="@font/lucia_grande"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lorem ipsum dolor sit amet."
        android:paddingLeft="80px"
        android:paddingTop="280px"
        android:fontFamily="@font/lucia_grande"
        android:textColor="@color/textColorDark"/>

    <!-- mapbox mapview element -->
    <com.mapbox.mapboxsdk.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        mapbox:mapbox_cameraTargetLat="41.885"
        mapbox:mapbox_cameraTargetLng="-87.679"
        mapbox:mapbox_styleUrl="@string/mapbox_style_light"
        mapbox:mapbox_cameraTilt="0"
        mapbox:mapbox_cameraZoom="12"/>

    <!-- where to entry element -->
    <RelativeLayout
        android:layout_width="900px"
        android:layout_height="180px"
        android:layout_gravity="center"
        android:layout_marginTop="-880px">
        <!-- background of where to popup -->
        <ImageView
            android:id="@+id/where_to_rectangle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/where_to_rectangle" />
        <!-- blue square -->
        <ImageView
            android:id="@+id/blue_square"
            android:layout_width="20px"
            android:layout_height="20px"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="80px"
            android:layout_marginLeft="80px"
            android:src="@drawable/blue_square" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:fontFamily="@font/lucia_grande"
            android:layout_marginTop="55px"
            android:layout_marginLeft="140px"
            android:textSize="18dp"
            android:hint="Where to?"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_marginTop="55px"
            android:layout_marginRight="120px">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="8px"
                android:fontFamily="@font/lucia_grande"
                android:textSize="14dp"
                android:hint="by"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/lucia_grande"
                android:textSize="18dp"
                android:hint=" 9:00pm"/>
        </LinearLayout>
    </RelativeLayout>

    <!-- layover rectangle, activated when filters open -->
    <ImageView
        android:id="@+id/layover_rectangle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/layover_rectangle" />


    <!-- include the bottom sheet from layouts  -->
    <include layout="@layout/bottom_sheet" />

</android.support.design.widget.CoordinatorLayout>
